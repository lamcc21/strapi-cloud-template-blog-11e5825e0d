{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "section": {
      "type": "enumeration",
      "enum": ["platform", "solutions", "insights", "company"],
      "required": true,
      "default": "insights"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "subject": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subject.subject"
    },
    "article_type": {
      "type": "enumeration",
      "enum": ["BLOGS", "NEWS", "POST"],
      "default": "POST",
      "required": true
    },
    "publish_date": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 1000
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "articles"
    },
    "seo_metatitle": {
      "type": "string"
    },
    "seo_metadescription": {
      "type": "text"
    },
    "menu_title": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 0
    }
  }
}
