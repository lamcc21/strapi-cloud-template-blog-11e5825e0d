{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 200
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "subject": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::subject.subject",
      "inversedBy": "articles"
    },
    "article_type": {
      "type": "enumeration",
      "enum": ["BLOGS", "NEWS"],
      "default": "BLOGS",
      "required": true
    },
    "publish_date": {
      "type": "date",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "content": {
      "type": "richtext",
      "required": false
    }
  }
}
