{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Create your blog content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "section": {
      "type": "enumeration",
      "enum": ["platform", "solutions", "insights", "company"],
      "required": true,
      "default": "insights"
    },
    "cover": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "section_meta": {
      "type": "dynamiczone",
      "components": ["shared.insights-meta"]
    },
    "publish_date": {
      "type": "date",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 1000
    }
  }
}
