{
  "kind": "collectionType",
  "collectionName": "subject_tags",
  "info": {
    "singularName": "subject-tag",
    "pluralName": "subject-tags",
    "displayName": "Subject Tag",
    "description": "Subject tags for articles (e.g., AI Orchestration, Healthcare, Technology)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "color": {
      "type": "string",
      "regex": "^#[0-9A-Fa-f]{6}$"
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "subject_tags"
    }
  }
}